<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F0881010"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F1DCBD"
            android:orientation="horizontal"
            android:padding="12dp">

            <ImageView
                android:id="@+id/imageview_layout_productes_foto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4"
                app:srcCompat="@android:drawable/ic_menu_gallery" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textview_layoutproductes_nom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Nom del Producte"
                        android:textColor="#D84E3625"
                        android:textSize="24sp" />

                    <ImageView
                        android:id="@+id/imgview_layoutproductes_alergen"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_gravity="right"
                        android:layout_weight="1"
                        android:cropToPadding="false"
                        android:foregroundGravity="right"
                        android:tooltipText="Pot contenir al·lèrgens"
                        app:srcCompat="@drawable/allergy" />

                    <ImageView
                        android:id="@+id/imgview_layoutproductes_picant"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_gravity="right"
                        android:layout_weight="1"
                        android:cropToPadding="false"
                        android:foregroundGravity="right"
                        android:tooltipText="Picant"
                        app:srcCompat="@drawable/spicy" />

                    <ImageView
                        android:id="@+id/imgview_layoutproductes_veggie"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_gravity="right"
                        android:layout_weight="1"
                        android:cropToPadding="false"
                        android:foregroundGravity="right"
                        android:tooltipText="Apte Vegetarians"
                        app:srcCompat="@drawable/veggie" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="33dp">

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/textview_layoutproductes_descripcio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Descripcio del producte, breu, pero amb més d'una línia perque poguem veure com queda a la vista de disseny"
                    android:textColor="#80A869"
                    android:textStyle="italic" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|right"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/button_layoutproductes_restar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:background="@drawable/btn_shape_round"
                        app:srcCompat="@drawable/selector_btn_restar" />

                    <EditText
                        android:id="@+id/edittext_layoutproductes_quantitat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:ems="2"
                        android:gravity="center|top"
                        android:inputType="textPersonName"
                        android:text="0"
                        android:textColor="#D84E3625"
                        android:textSize="30sp" />

                    <ImageButton
                        android:id="@+id/button_layoutproductes_sumar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:background="@drawable/btn_shape_round"
                        app:srcCompat="@drawable/selector_btn_sumar" />

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2" />

                    <TextView
                        android:id="@+id/textview_layoutproductes_preu"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="bottom"
                        android:gravity="bottom"
                        android:text="0,00 €"
                        android:textColor="#DCFF9800"
                        android:textSize="30sp" />

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <ImageButton
                        android:id="@+id/button_layoutproductes_ok"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:background="@drawable/btn_shape_round"
                        android:tooltipText="Afegir a la cistella"
                        app:srcCompat="@drawable/selector_btn_acceptar" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        app:cardBackgroundColor="#8DE3C9A4" />

</LinearLayout>